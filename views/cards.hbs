<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PayHome - Welcome to user interface</title>
    <link rel="shortcut icon" type="image" href="../static/images/ph3.png">
    <link rel="stylesheet" href="/static/css2/bootstrap.min.css">
    <link rel="icon" href="/static/images/ph3.png" type="image/icon type">
    <script src="/js2/bootstrap.js"></script>
    <style>
        @keyframes popLeft {
            from {
                left: 37%;
            }

            to {
                left: 29%;
            }
        }

        @keyframes popRight {
            from {
                left: 29%;
            }

            to {
                left: 37%;
            }
        }

        * {
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
        }

        .btn:hover {
            background-color: #0d6efd;
            color: white;
        }

        .btn {
            color: #0d6efd;
        }

        .line {
            height: 2px;
            width: 20px;
            background-color: white;
            margin-top: 3px;
        }

        .burger {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }

        #main {
            height: inherit;
            position: absolute;
            left: 37%;
        }

        .nav1 {
            position: relative;
            left: 37%;
            background-color: black;
            color: white;
        }

        .nav-items {
            text-align: center;
            background-color: none;
            display: block;
        }

        .nav-items a{
            text-decoration: none;
            color: white;
        }
        .active {
            background-color: #0d6efd;
            cursor: pointer;
        }

        .nav-items img {
            filter: invert(100%);
            height: 40px;
        }

        .unactive:hover {
            background-color: #6c757d;
        }

        .alert {
            position: relative;
            left: 37%;
            height: 20%;
        }
    </style>
</head>

<body style="overflow:hidden;height: 100vh;">
    <div class="nav1" id="nav" style="margin-right: 0px;font-family: 'Bahnschrift';">
        <div class="nav-items text-uppercase p-3 unactive ">
            <a href="/log/account">
                <img src="/static/images/icons8-account-30.png" alt=""> <br> {{account}}
            </a>
        </div>
        <div class="nav-items text-uppercase p-3 unactive" onclick="add()" id="Statements">
            <a href="/log/account/statements">
                <img src="/static/images/icons8-purchase-order-50.png" alt=""> <br>
                Statements
            </a>
        </div>
        <div class="nav-items text-uppercase p-3 active" id="Cards">
            <a>
                <img src="/static/images/icons8-credit-card-30.png" alt=""> <br>My Card
            </a>
        </div>
        <div class="nav-items p-3 unactive" id="a">
            <a href="/log/account/settings">
                <img src="/static/images/icons8-setting-64.png" alt=""> <br>Settings
        </div>
        </a>
    </div>
    <div class="bg-dark" id="main" style="width: 60vh;">
        <div class="row m-4">
            <div class="col-2 burger" id="burger">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>
            <div class="col mt-2 font-monospace text-center text-primary text-uppercase" style="font-size: 1.3rem;">
                PayHome
            </div>
            <a class="col-3 btn border-2 border-primary" onclick="msg()">Log Out</a>
        </div>
    <div class="text-white row">
        <div class="col-2"></div>
        <h2 class="col">
            Get Digi Pay Account
        </h2>
        <div class="col-1"></div>
    </div>
    <div class="row mt-3">
        <div class="col-3"></div>
        <a href="/log/account/cards/get" class="btn col border-primary">Get Now</a>
        <div class="col-3"></div>
    </div>
    </div>

    <div class="row alert">
        <div id="message" class=" bg-light col p-4" style="display: none;">
            Are you sure you want to log out
            <div class="row" style="display: flex;justify-content: space-between;">
                <a href="/" class="btn border-2 border-primary col" style="width: 20px;">Log out</a>
                <a class="btn border-2 border-primary col" style="width: 20px;" onclick="func3()">Stay here</a>
            </div>
        </div>
    </div>
    <script>
        let burger = document.getElementById('burger');
        let nav = document.getElementById('nav');
        let main = document.getElementById('main');
        nav.style.left = '37%'
        burger.addEventListener('click', () => {
            if (nav.style.left == '37%') {
                nav.style.left = '29%'
                nav.style.animation = 'popLeft 1s 1';
            }
            else {
                nav.style.left = '37%'
                nav.style.animation = 'popRight 1s 1';
            }
        })
        let account = document.getElementById('Account')
        account.addEventListener('click', () => {
            alert("Account apka hai")
        })
        function msg() {
            if (nav.style.left == '37%')
                document.getElementById('nav').style.display = 'none'
            document.getElementById('main').style.opacity = '0.2'
            document.getElementById('nav').style.opacity = '0.2'
            document.getElementById('message').style.display = 'block';
        }
        function func3() {
            document.getElementById('main').style.opacity = '1'
            document.getElementById('nav').style.opacity = '1'
            document.getElementById('nav').style.display = 'block'
            document.getElementById('message').style.display = 'none';
            nav.style.animation = 'none'
        }
        function add() { }
    </script>
</body>

</html>