                label(for="pin") Pin : <br>
                input(type="password", name="pin" id="pin" placeholder="Also enter a unique pin" maxlength="4" pattern="[0-9]{4}" required) 
                </br>
                input(type="checkbox" id="showpin" onclick="myfunc2()")  
                .checkbox(style="display:inline-block;padding:5px;")
