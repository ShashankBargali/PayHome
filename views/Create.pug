                label(for="psd") Password : <br>
                input(type="password", name="psd" id="psd" placeholder="Create your own password" required) 
                </br>
                input(type="checkbox" id="checkbox" onclick="myfunc()")  
                .checkbox(style="display:inline-block;padding:5px;")
