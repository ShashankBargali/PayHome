block content
    .form 
        .creating 
            a(href="/") Home 
            h1 Create an online bank Account
        <form autocomplete="off" action="/register" method="post" class="creating">
            .name 
                label(for="name") Name : <br>
                input(type="text", name="name" id="name" placeholder="Enter your name" required) 
            .single-line 
                .age 
                    label(for="age") Age : <br>
                    input(type="number", name="age" id="age" placeholder="Enter your age" min="1" require)
                .acno 
                    label(for="acno") Account no. : <br>
                    input(type="text", name="acno" id="acno" placeholder="Enter a unique account no." maxlength="6" pattern="[0-9]{6}" required )
